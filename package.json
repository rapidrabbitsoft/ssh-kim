{
  "name": "ssh-kim-app",
  "private": true,
  "version": "0.1.0",
  "description": "Cross-platform SSH Key Manager",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "clean": "cd src-tauri && cargo clean",
    "build:prod": "npm run build && tauri build",
    "build:prod:mac": "npm run build && tauri build --target aarch64-apple-darwin",
    "build:prod:win": "npm run build && tauri build --target x86_64-pc-windows-msvc",
    "build:prod:linux": "npm run build && tauri build --target x86_64-unknown-linux-gnu"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-opener": "^2",
    "lucide-react": "^0.525.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@vitejs/plugin-react": "^4.3.4",
    "sharp": "^0.34.3",
    "vite": "^6.0.3"
  }
}
